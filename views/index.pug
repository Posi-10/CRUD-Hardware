doctype html
html(lang="en")

  head

    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon" type="image/x-icon" href="/static/img/favicon.ico")
    title Hardware CRUD
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

  body

    .container-fluid

      .row.p-0
        .col.m-0
          .navbar.bg-light
            .container-fluid
              a.navbar-brand
                img(src="/static/img/hardware.png" alt="Hardware" width="30" height="30")
              .d-flex
                button#btnSubir.btn.btn-outline-success Agregar Hardware

      .row.mt-5.ms-5.align-items-center.justify-content-around
        if ok
          each data in hardware
            .col-md-6.align-self-center
              .card.mb-3(style="max-width: 540px;")
                .row.g-0
                  .col-md-4.align-self-center
                    img.img-fluid.rounded-start(src=data.image_link alt="...")
                  .col-md-8
                    .card-header.d-flex.justify-content-between
                      h5.card-title  
                        span.fw-bold Nombre: 
                        =data.name
                      a.btn.btn-close(href=`/delete/${data._id}`)
                      p.d-none=data.id
                    .card-body
                      p.card-text
                        span.fw-bold Hardware: 
                        =data.hardware
                      p.card-text
                        span.fw-bold Modelo: 
                        =data.model
                      p.card-text
                        span.fw-bold Marca: 
                        =data.brand
                      p.card-text
                        span.fw-bold Descripcion: 
                        =data.description
                      p.card-text
                        span.fw-bold Año de fabricacion: 
                        =data.release_year
                    .card-footer.text-center
                      button#btnActualizar.btn.btn-outline-warning Actualizar
